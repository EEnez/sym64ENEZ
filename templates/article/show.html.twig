{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <article class="mb-5">
        <header class="mb-4">
            <h1>{{ article.title }}</h1>
            <div class="text-muted mb-2">
                Par {{ article.author.fullname }} 
                le {{ article.publishedAt|date('d/m/Y à H:i') }}
            </div>
            <div class="mb-3">
                {% for section in article.sections %}
                    <a href="{{ path('app_section', {slug: section.sectionSlug}) }}" 
                       class="badge bg-secondary text-decoration-none">
                        {{ section.sectionTitle }}
                    </a>
                {% endfor %}
            </div>
        </header>

        <div class="article-content">
            {{ article.text|nl2br }}
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="mt-4">
                <a href="{{ path('admin_article_edit', {id: article.id}) }}" 
                   class="btn btn-warning">Éditer</a>
            </div>
        {% endif %}
    </article>

    <div class="related-articles mt-5">
        <h3>Articles similaires</h3>
        <div class="row">
            {% for relatedArticle in relatedArticles %}
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('app_article', {slug: relatedArticle.titleSlug}) }}" 
                                   class="text-decoration-none">
                                    {{ relatedArticle.title }}
                                </a>
                            </h5>
                            <p class="card-text small">
                                {{ relatedArticle.text|excerpt(100) }}
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %} 