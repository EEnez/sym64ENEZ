{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="container">
        <article class="mb-5">
            <h1>{{ article.title }}</h1>
            <div class="metadata mb-4">
                <small>
                    Par {{ article.author.fullname }} 
                    le {{ article.publishedAt|date('d/m/Y') }}
                </small>
            </div>
            
            <div class="content">
                {{ article.text|nl2br }}
            </div>
        </article>

        <section id="comments" class="mt-5">
            <h2>Commentaires</h2>

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {{ form_start(commentForm) }}
                    {{ form_widget(commentForm.content, {
                        'attr': {
                            'class': 'form-control mb-3',
                            'placeholder': 'Votre commentaire...'
                        }
                    }) }}
                    <button type="submit" class="btn btn-primary">Commenter</button>
                {{ form_end(commentForm) }}
            {% else %}
                <p>
                    <a href="{{ path('app_login') }}">Connectez-vous</a> ou 
                    <a href="{{ path('app_register') }}">inscrivez-vous</a> 
                    pour laisser un commentaire.
                </p>
            {% endif %}

            <div class="comments-list mt-4">
                {% for comment in article.comments %}
                    <div class="comment card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title">{{ comment.author.fullname }}</h5>
                                <small class="text-muted">
                                    {{ comment.createdAt|date('d/m/Y H:i') }}
                                </small>
                            </div>
                            <p class="card-text">{{ comment.content|nl2br }}</p>
                        </div>
                    </div>
                {% else %}
                    <p>Aucun commentaire pour le moment.</p>
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %} 