{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="container">
        <article class="mb-5">
            <h1>{{ article.title }}</h1>
            <div class="metadata mb-4">
                <small>
                    Par {{ article.author.fullname }} 
                    le {{ article.publishedAt|date('d/m/Y') }}
                </small>
            </div>
            
            <div class="content">
                {{ article.text|nl2br }}
            </div>
        </article>

        <section id="comments" class="mt-5">
            <h2>Commentaires</h2>

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {{ form_start(commentForm) }}
                    {{ form_widget(commentForm.content, {
                        'attr': {
                            'class': 'form-control mb-3',
                            'placeholder': 'Votre commentaire...'
                        }
                    }) }}
                    <button type="submit" class="btn btn-primary">Commenter</button>
                {{ form_end(commentForm) }}
            {% else %}
                <p>
                    <a href="{{ path('app_login') }}">Connectez-vous</a> ou 
                    <a href="{{ path('app_register') }}">inscrivez-vous</a> 
                    pour laisser un commentaire.
                </p>
            {% endif %}

            <div class="comments-list mt-4">
                {% for comment in article.comments %}
                    <div class="comment card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title">{{ comment.author.fullname }}</h5>
                                <div>
                                    <small class="text-muted">
                                        {{ comment.createdAt|date('d/m/Y H:i') }}
                                    </small>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <div class="btn-group btn-group-sm ms-2">
                                            <a href="{{ path('admin_comment_edit', {id: comment.id}) }}" 
                                               class="btn btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('admin_comment_delete', {id: comment.id}) }}" 
                                                  class="d-inline" 
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                                <button class="btn btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <p class="card-text">{{ comment.content|nl2br }}</p>
                        </div>
                    </div>
                {% else %}
                    <p>Aucun commentaire pour le moment.</p>
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %} 