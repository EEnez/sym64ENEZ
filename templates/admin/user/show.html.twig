{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Détails de l'utilisateur</h1>
            <div>
                <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-warning">Éditer</a>
                <a href="{{ path('admin_user_index') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Nom d'utilisateur</dt>
                    <dd class="col-sm-9">{{ user.username }}</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">{{ user.email }}</dd>

                    <dt class="col-sm-3">Nom complet</dt>
                    <dd class="col-sm-9">{{ user.fullname|default('Non renseigné') }}</dd>

                    <dt class="col-sm-3">Rôles</dt>
                    <dd class="col-sm-9">
                        {% for role in user.roles %}
                            <span class="badge bg-secondary">{{ role }}</span>
                        {% endfor %}
                    </dd>

                    <dt class="col-sm-3">Statut</dt>
                    <dd class="col-sm-9">
                        {% if user.isActive %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-danger">Inactif</span>
                        {% endif %}
                    </dd>

                    <dt class="col-sm-3">Identifiant unique</dt>
                    <dd class="col-sm-9">{{ user.uniqid }}</dd>
                </dl>
            </div>
        </div>
    </div>
{% endblock %} 