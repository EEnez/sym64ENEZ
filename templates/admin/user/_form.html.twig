{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
    <div class="mb-3">
        {{ form_label(form.username, 'Nom d\'utilisateur') }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.username) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.email, 'Email') }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.plainPassword, 'Mot de passe') }}
        {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.plainPassword) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.fullname, 'Nom complet') }}
        {{ form_widget(form.fullname, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.fullname) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.roles, 'Rôles') }}
        <div>
            {{ form_widget(form.roles) }}
        </div>
        {{ form_errors(form.roles) }}
    </div>

    <div class="mb-3">
        <div class="form-check">
            {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(form.isActive, 'Compte actif', {'label_attr': {'class': 'form-check-label'}}) }}
        </div>
        {{ form_errors(form.isActive) }}
    </div>

    <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    <a href="{{ path('admin_user_index') }}" class="btn btn-secondary">Retour à la liste</a>
{{ form_end(form) }} 