{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
    <div class="mb-3">
        {{ form_label(form.sectionTitle) }}
        {{ form_widget(form.sectionTitle, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.sectionTitle) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.sectionDetail) }}
        {{ form_widget(form.sectionDetail, {'attr': {'class': 'form-control', 'rows': 5}}) }}
        {{ form_errors(form.sectionDetail) }}
    </div>

    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
    <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">Back to list</a>
{{ form_end(form) }} 