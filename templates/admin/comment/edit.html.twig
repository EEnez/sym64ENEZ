{% extends 'admin/base.html.twig' %}

{% block title %}Modifier le commentaire{% endblock %}

{% block body %}
    <div class="container-fluid px-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mt-4">Modifier le commentaire</h1>
            <a href="{{ path('admin_comment_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Retour à la liste
            </a>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fas fa-edit me-1"></i>
                        Édition du commentaire
                    </div>
                    <small class="text-muted">
                        Par {{ comment.author.fullname }} le {{ comment.createdAt|date('d/m/Y H:i') }}
                    </small>
                </div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Article</label>
                    <p class="form-control-static">
                        <a href="{{ path('app_article', {slug: comment.article.titleSlug}) }}" 
                           class="text-decoration-none">
                            {{ comment.article.title }}
                        </a>
                    </p>
                </div>

                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.content, 'Contenu du commentaire') }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                        {{ form_errors(form.content) }}
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Enregistrer les modifications
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %} 