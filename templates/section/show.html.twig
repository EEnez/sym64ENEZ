{% extends 'base.html.twig' %}

{% block title %}{{ section.sectionTitle }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ section.sectionTitle }}</h1>
        
        {% if articles is not empty %}
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{ path('app_article', {slug: article.titleSlug}) }}" 
                                       class="text-decoration-none">{{ article.title }}</a>
                                </h5>
                                <div class="card-text mb-3">
                                    {{ article.text|excerpt(200) }}
                                </div>
                                <div class="metadata text-muted small">
                                    Par <a href="{{ path('app_author', {id: article.author.id}) }}" 
                                         class="text-decoration-none">{{ article.author.fullname }}</a>
                                    <br>
                                    Publi√© le {{ article.publishedAt|date('d/m/Y') }}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                Aucun article dans cette section pour le moment.
            </div>
        {% endif %}
    </div>
{% endblock %} 